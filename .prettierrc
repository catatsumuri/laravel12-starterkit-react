{
  "semi": true,
  "singleQuote": true,
  "singleAttributePerLine": false,
  "htmlWhitespaceSensitivity": "css",
  "printWidth": 150,
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
  "tailwindFunctions": ["clsx", "cn"],
  "tabWidth": 2,
  "trailingComma": "es5",
  "arrowParens": "always",
  "overrides": [
    {
      "files": "**/*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.yml",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
